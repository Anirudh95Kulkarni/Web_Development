<%- include("partials/header") %>
	
	<div class="container">
		<h1>Edit Sport</h1>
		<form action="/sports/<%= sport._id %>?_method=PUT" method="POST">
  			<div class="mb-3">
    			<label for="title" class="form-label">Title</label>
    			<input type="text" class="form-control" name="title" value="<%= sport.title %>">
  			</div>
  			<div class="mb-3">
    			<label for="description" class="form-label">Description</label>
    			<input type="text" class="form-control" name="description" value="<%= sport.description %>">
  			</div>
			<div class="mb-3">
    			<label for="player" class="form-label">Prominent Players</label>
    			<input type="text" class="form-control" name="player" value="<%= sport.player %>">
  			</div>
			<div class="mb-3">
    			<label for="genre" class="form-label">Genre</label>
    			<select class="form-control" id="genre" name="genre">
					<option disabled>--Choose Below--</option>
					<option <%= sport.genre ==='ball sports' ? 'selected' : '' %> >Ball sports</option>
					<option <%= sport.genre ==='racket sports' ? 'selected' : '' %> >Racket sports</option>
					<option <%= sport.genre ==='motor sports' ? 'selected' : '' %> >Motor sports</option>
					<option <%= sport.genre ==='adventure sports' ? 'selected' : '' %> >Adventure sports</option>
					<option <%= sport.genre ==='water sports' ? 'selected' : '' %> >Water sports</option>
					<option <%= sport.genre ==='athletics' ? 'selected' : '' %> >Athletics</option>
					<option <%= sport.genre ==='mind sports' ? 'selected' : '' %> >Mind sports</option>
					<option <%= sport.genre ==='shooting sports' ? 'selected' : '' %> >Shooting sports</option>
				</select>
  			</div>
			<div class="form-group form-check">
    			<input type="checkbox" class="form-check-input" name="groupSport" <%= sport.groupSport ? 'checked' : '' %> >
				<label for="groupSport">Is it a group sport?</label>
  			</div>
			<div class="form-group form-check">
    			<input type="checkbox" class="form-check-input" name="inOlympics" <%= sport.inOlympics ? 'checked' : '' %> >
				<label for="inOlympics">Is it played in Olympics</label>
  			</div>
  			<div class="mb-3">
    			<label for="image" class="form-label">Image</label>
    			<input type="text" class="form-control" value="<%= sport.image %>" name="image">
  			</div>
  			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
<%- include("partials/footer") %>