<%- include("partials/header") %>

<div class="container">
	<h1>Add New Comment</h1>
	<form action="/sports/<%= sportId %>/comments" method="POST" >
		<div class="form-group">
		<label for="user" class="m-2">Username</label>
		<input type="text" name="user" id="user" class="form-control m-2" placeholder="username" required autofocus>
		</div>
		<div class="form-group">
			<label for="text" class="m-2">Comment Text</label>
			<textarea name="text" id="text" class="form-control m-2" placeholder="Comment text here" rows="8" cols="80" required></textarea>
		</div>
		<input type="hidden" name="sportId" value="<%= sportId %>">
		<button type="submit" class="btn btn-primary m-2">
			Submit Comment
		</button>
	</form>
</div>


<%- include("partials/footer") %>