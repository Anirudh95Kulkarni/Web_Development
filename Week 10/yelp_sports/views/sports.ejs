<%- include("partials/header.ejs") %>
	
	<div class ="container">
		<div class = "row mt-2">
			<% sports.forEach((sport) => { %>
			<div class="card m-3">
				<a href="/sports/<%= sport._id %>">
					<img class="card-img card-img-top" src="<%= sport.image %>" alt="Picture of the sport">
				</a>
				<h3 class="card-title mt-3"><%= sport.title %></h3>
				<p class="card-text mb-3 mx-3"><%= sport.description %></p>
			</div>
			<% }) %>
		</div>
	</div>
<%- include("partials/footer.ejs") %>